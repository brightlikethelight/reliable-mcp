# Production Environment Variables Template
# Copy this file to .env.production and fill in your values

# Database Configuration
DB_NAME=mcp_reliability
DB_USER=mcp_user
DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/${DB_NAME}

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Security
SECRET_KEY=CHANGE_ME_TO_SECURE_SECRET_KEY_AT_LEAST_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=https://mcp-reliability.com,https://www.mcp-reliability.com

# API URLs
API_URL=https://api.mcp-reliability.com
WS_URL=wss://api.mcp-reliability.com/ws

# External Services
GITHUB_TOKEN=ghp_CHANGE_ME_TO_YOUR_GITHUB_TOKEN
MODAL_TOKEN_ID=CHANGE_ME_TO_YOUR_MODAL_TOKEN_ID
MODAL_TOKEN_SECRET=CHANGE_ME_TO_YOUR_MODAL_TOKEN_SECRET

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=CHANGE_ME_TO_APP_PASSWORD
EMAIL_FROM=noreply@mcp-reliability.com

# Slack Integration (optional)
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Sentry Error Tracking (optional)
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# File Upload Limits
MAX_UPLOAD_SIZE_MB=100

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=mcp-reliability-backups

# AWS Configuration (if using S3 for backups)
AWS_ACCESS_KEY_ID=CHANGE_ME
AWS_SECRET_ACCESS_KEY=CHANGE_ME
AWS_REGION=us-east-1